<% layout('boilerplate.ejs') %>

<div class=" container mt-5">
    <h5 class="mb-2">Installing ThemeSaver is as simple as runing this one command in a terminal</h5>
    <div class="row code mb-5">
        <div class="col-11 d-flex justify-content-start align-items-center">
           <code class='overflow-auto' id='copyInstallText'>wget -qO- https://raw.githubusercontent.com/techcoder20/ThemeSaver/main/install.py | python3</code>
        </div>
        <div class="col-1 d-flex justify-content-end">
            <button class="btn btn-copy" id='copyInstall'>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
                    <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                    <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                  </svg>
            </button>
        </div>
    </div>

    <h5 class="mb-2 mt-5">To uninstall ThemeSaver you can use the built in uninstall script</h5>
    <div class="row code">
        <div class="col-11 d-flex justify-content-start align-items-center" >
           <code class='overflow-auto' id='copyUninstallText'>themesaver uninstall</code>
        </div>
        <div class="col-1 d-flex justify-content-end">
            <button class="btn  btn-copy " id='copyUninstall'>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clipboard" viewBox="0 0 16 16">
                    <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z"/>
                    <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z"/>
                  </svg>
            </button>
        </div>
    </div>
</div>

<script>
    var copyIds = ['copyInstall', 'copyUninstall']
</script>

<script src="/javascript/copy.js"></script>
